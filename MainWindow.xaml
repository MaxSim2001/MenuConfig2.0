<Window x:Class="MenuConfig2._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Navigation WPF" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <!-- Navigation latérale -->
            <ColumnDefinition Width="*"/>
            <!-- Contenu principal -->
        </Grid.ColumnDefinitions>

        <!-- Menu latéral -->
        <StackPanel Grid.Column="0" Background="#2C3E50" Width="200">
            <Button Content="Accueil" Command="{Binding NavigateCommand}" CommandParameter="HomePage" 
                    Foreground="White" Background="Transparent" Margin="10"/>
            <Button Content="Paramètres" Command="{Binding NavigateCommand}" CommandParameter="SettingsPage"
                    Foreground="White" Background="Transparent" Margin="10"/>
            <Button Content="À Propos" Command="{Binding NavigateCommand}" CommandParameter="AboutPage"
                    Foreground="White" Background="Transparent" Margin="10"/>
        </StackPanel>

        <!-- Contenu principal -->
        <Frame Grid.Column="1" Name="MainFrame"/>
    </Grid>
</Window>
